<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          メッセージ一覧
        </div>
        <div class="panel-body panel-conversation">
          <% if !@conversations.blank? %>
            <% @conversations.each do |conversation| %>
              <% other = conversation.sender == current_user ? conversation.recipient : conversation.sender %>
              <div class="row">
                <% if !conversation.messages.last.blank? %>
                  <%= link_to user_conversation_messages_path(conversation) do %>
                    <div class="col-xs-2">
                      <strong><%= other.name %></strong> 
                    </div>
                    <div class="col-xs-7">
                      <%= conversation.messages.last.body %>
                    </div>
                    <div class="col-xs-3">
                      <span style="font-size: 12px;", class="pull-right"><%= conversation.messages.last.message_time %></span>
                    </div>
                  <% end %>
                <% else %>
                  <div class="col-xs-2">
                    <strong><%= other.name %></strong> 
                  </div>
                  <div class="col-xs-7">
                    <h4>メッセージはありません</h4>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <h4>メッセージはありません</h4>
          <% end %>
        </div>
      </div>    
    </div>
  </div>    
</div>
